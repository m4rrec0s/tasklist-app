generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id          String   @id @default(uuid())
  name        String
  description String
  sets        Int
  reps        Int
  weight      Int @default(0)
  createdAt   DateTime @default(now())
  category    Category[]
}

model Category {
  id          String    @id @default(uuid())
  name        String
  exercises   Exercise[]
  createdAt   DateTime  @default(now())
}